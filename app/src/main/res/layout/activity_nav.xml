<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|enterAlways"
        app:tabIndicatorColor="#222222"
        app:tabMode="fixed"
        app:tabTextColor="#353535">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/homeTab"
            android:tag="home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:icon="@drawable/clock" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/giftTab"
            android:tag="gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:icon="@drawable/gift_small" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/dataTab"
            android:tag="data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:icon="@drawable/charts" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/settingTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:icon="@drawable/setting"
            android:tag="setting" />
    </com.google.android.material.tabs.TabLayout>

</FrameLayout>